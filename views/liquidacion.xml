<odoo>
    <data>
        <record id="liquidaciones_tree" model="ir.ui.view">
            <field name="name">Liquidaciones</field>
            <field name="model">pago_proveedores.liquidacion</field>
            <field name="arch" type="xml">
                <tree>
                 <field name="id"/>
                 <field name="partner_id"/>
                 <field name="monto"/>
                 <field name="monto2"/>
                 <field name="fecha"/>
                </tree>
            </field>
                  
        </record>
        <record id="liquidaciones_form" model="ir.ui.view">
            <field name="name">Liquidaciones</field>
            <field name="model">pago_proveedores.liquidacion</field>
            <field name="arch" type="xml">
                <tree>
                 <field name="id"/>
                 <field name="partner_id"/>
                 <field name="estado"/>
                 <field name="monto"/>
                 <field name="monto2"/>
                 <field name="fecha"/>
                </tree>
            </field>
            <field name="arch" type="xml">
                <form string="Liquidaciones">
                    <header>
                    <button class="oe_highlight" type="object" name="action_enviado" string="Enviar" attrs="{'invisible': [('estado', '!=','B')]}" confirm="多Enviar para control la liquidacion?" groups="pago_proveedores.pago_proveedores_operator" />
                    <button class="oe_highlight" type="object" name="action_controlado" string="Controlado" attrs="{'invisible': [('estado', '!=','E')]}" confirm="多Marcar como Controlada la liquidacion?" groups="pago_proveedores.pago_proveedores_manager" />
                    <button class="oe_highlight" type="object" name="action_aprobado" string="Aprobar"  attrs="{'invisible': [('estado', '!=','C')]}" confirm="多Autorizar la Liquidacion para el Pago?" groups="pago_proveedores.pago_proveedores_manager" />
                    <button class="oe_highlight" type="object" name="action_pagado" string="Pagar" attrs="{'invisible': [('estado', '!=','A')]}" confirm="多Desea pagar esta Liquidacion?" groups="pago_proveedores.pago_proveedores_pagador" />
                    <field name="estado" widget="statusbar"  options="{'fold_field': 'fold'}" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" />
                                <field name="observaciones"/>
                                
                            </group>
                            
                        </group>
                         <notebook>
                        
                        <page string="Facturas Incluidas" name="facturas_seleccionadas">"
                            <button class="oe_highlight" name="%(action_liquidacion_purchase_move_wizard)d" title="Editar" icon="fa-edit" type="action" string="Editar"/>
                            <field name="purchase_move_ids" readonly="1">
                             
                                <tree>
                                    <field name="name"/>
                                    <field name="towing_order_id"/>
                                    <field name="customer_id"/>
                                    <field name="amount_total"/>
                                    <field name="liquidacion_id"/>
                                </tree>
                                
                            </field>
                        </page>
                       

                        </notebook>
                    </sheet>

                </form>
            </field>
                  
        </record>
        <record id="facturas_tree" model="ir.ui.view">
            <field name="name">Facturas</field>
            <field name="model">purchase.move</field>
            <field name="arch" type="xml">
                <tree>
                 <field name="name"/>
                 <field name="company_id"/>
                 <field name="partner_id"/>
                 <field name="customer_id"/>
                 <field name="invoice_date_due"/>
                 <field name="towing_order_id"/>
                 <field name="sale_order_id"/>
                 <field name="purchase_order_id"/>
                 <field name="amount_total"/>
                 <field name="liquidacion_id"/>
                </tree>
            </field>
                  
        </record>



        <record id="action_liquidaciones" model="ir.actions.act_window">
            <field name="name">Liquidaciones</field>
            <field name="res_model">pago_proveedores.liquidacion</field>
            <field name="view_mode">tree,form</field>
            



            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear nueva Liquidacion
                </p>
            </field>
        </record> 
       <record id="action_proveedores_tree"              model="ir.actions.act_window">
            <field name="name">Proveedores</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo proveedor
                </p>
            </field>
        </record>
        <record id="action_facturas_tree"              model="ir.actions.act_window">
            <field name="name">Facturas</field>
            <field name="res_model">purchase.move</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear nueva Liquidacion
                </p>
            </field>
        </record>

        <record id="pagos_tree" model="ir.ui.view">
            <field name="name">Pagos</field>
            <field name="model">pago_proveedores.pagos</field>
            <field name="arch" type="xml">
                <tree>
                 <field name="id"/>
                 <field name="liquidacion_id"/>
                 <field name="medio_de_pago"/>
                </tree>
            </field>
                  
        </record>
        <record id="pagos_form" model="ir.ui.view">
            <field name="name">Pagos</field>
            <field name="model">pago_proveedores.pagos</field>
            <field name="arch" type="xml">
                <tree>
                 <field name="id"/>
                 <field name="liquidacion_id"/>
                 <field name="medio_de_pago"/>
                </tree>
            </field>
            <field name="arch" type="xml">
                <form string="Pago">
                    <header>
                    

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="liquidacion_id" />
                                <field name="medio_de_pago"/>
                                
                            </group>
                            
                        </group>
                         
                    </sheet>

                </form>
            </field>
            <record id="action_pagos" model="ir.actions.act_window">
            <field name="name">PAaos</field>
            <field name="res_model">pago_proveedores.pagos</field>
            <field name="view_mode">tree,form</field>
            



            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear nuevo pago
                </p>
            </field>
        </record> 



        <menuitem id="liquidacion_menu_root" name="Liquidacion a Proveedores" sequence="7"  web_icon="pago_proveedores,static/description/icon.png"/>
        <menuitem id="liquidacion_menu"  name="Liquidacion" parent="liquidacion_menu_root" action="action_liquidaciones" sequence="0"/>
        <menuitem id="liquidacion_facturas_menu"  name="Facturas" parent="liquidacion_menu_root" action="action_facturas_tree" sequence="2"/>
        <menuitem id="liquidacion_pagos_menu"  name="Pagos" parent="liquidacion_menu_root" action="action_pagos_tree" sequence="3"/>

        
    </data>
</odoo> 
