<odoo>
    <data>
        <record id="liquidaciones_tree" model="ir.ui.view">
            <field name="name">Liquidaciones</field>
            <field name="model">pago_proveedores.liquidacion</field>
            <field name="arch" type="xml">
                <tree>
                 <field name="id"/>
                 <field name="partner_id"/>
                 <field name="monto"/>
                 <field name="fecha"/>
                </tree>
            </field>
                  
        </record>
        <record id="action_liquidaciones" model="ir.actions.act_window">
            <field name="name">Liquidaciones</field>
            <field name="res_model">pago_proveedores.liquidacion</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear nueva Liquidacion
                </p>
            </field>
        </record> 
       <record id="action_proveedores_tree"              model="ir.actions.act_window">
            <field name="name">Proveedores</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear un nuevo proveedor
                </p>
            </field>
        </record>

        <menuitem id="liquidacion_menu_root" name="Liquidacion a Proveedores" sequence="7"/>
        <menuitem id="liquidacion_menu"  name="Liquidacion" parent="liquidacion_menu_root" action="action_liquidaciones" sequence="0"/>
        <menuitem id="liquidacion_proveedores_menu"  name="Proveedores" parent="liquidacion_menu_root" action="action_proveedores_tree" sequence="1"/>
        
    </data>
</odoo> 
